
_G.firetouchinterests = HA
spawn(function()
    while _G.firetouchinterests do
        for _, descendant in ipairs(workspace:GetDescendants()) do
            if descendant:IsA("TouchTransmitter") and game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character.PrimaryPart then
                local ancestor = descendant:FindFirstAncestorWhichIsA("Part")
                local primaryPart = game.Players.LocalPlayer.Character.PrimaryPart

                if ancestor and primaryPart then
                    task.spawn(function()
                        firetouchinterest(ancestor, primaryPart, 1)
                        task.wait()
                        firetouchinterest(ancestor, primaryPart, 0)
                    end)
                end
            end
        end
        task.wait(1) 
    end
end)
